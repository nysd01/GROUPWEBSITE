{
  "version": 2,
  "builds": [
    {
      "src": "myfirst/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build"
    },
    {
      "src": "staticfiles/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "media/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/media/(.*)", "dest": "/media/$1" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "myfirst/wsgi.py" }
  ]
}
